<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task)%>
      <%= link_to delete_path(task), method: :delete, data: { confirm: 'You sure dude?' } do %>
        <i class="fas fa-trash" style="color: grey"></i>
      <% end %>

    </li>
  <% end %>
</ul>

<%= link_to 'Add a new task', tasks_new_path %>
